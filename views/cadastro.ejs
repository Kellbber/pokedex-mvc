  <header>
    <img src="/img/background.png" alt="banner">
  </header>
    <main>
<section id="cadastro">
    <img src="/img/pokedexhome.png" alt="">
    <div>
    <% if(Pokemon == undefined) { %>
      <h2>Cadastre um novo Pokémon!</h2>
    <form action="/cadastro" method="POST">
      <label for="nome">Nome:</label>
      <input type="text" id="nome" name="nome" required>
      <div id="lugarDescricao">
      <label for="descricao">Descrição:</label>
      <input type="text" id="descricao" name="descricao" required>
    </div>
      <label for="tipo">Tipo:</label>
      <input type="text" id="tipo" name="tipo" required>

      <label for="imagem">Link da imagem:</label>
      <input type="text" id="imagem" name="imagem" required>

      <button id="btnCadastrar" type="submit">Cadastrar</button>

    </form>
    <% } else{ %>
      <h2>Atualize o Pokémon</h2>
    <form action="/atualizar/<%= Pokedex.indexOf(Pokemon) %>" method="POST">
      <label for="nome">Nome:</label>
      <input type="text" id="nome" name="nome" value="<%= Pokemon.nome %>" required>

      <label for="descricao">Descrição:</label>
      <input type="text" id="descricao" name="descricao" value="<%= Pokemon.descricao %>" required>

      <label for="tipo">Tipo:</label>
      <input type="text" id="tipo" name="tipo" value="<%= Pokemon.tipo %>" required>

      <label for="imagem">Link da imagem:</label>
      <input type="text" id="imagem" name="imagem" value="<%= Pokemon.imagem %>" required>

      <button id="btnAtualizar" type="submit">Atualizar</button>
      
    </form>
    <% } %>
  </div>
  </section>
    </main>
