<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Pokedex</title>
  </head>
  <body>

    <nav>
        <ul>
          <li><a href="/"><h1>POKEDEX</h1></a></li>
          <li><a href="/detalhes/">CADASTRO</a></li>
          <li><a href="#cards">POKEMON</a></li>
          <li><a href="/novidades">NOVIDADES</a></li>
          <li><a href="/musicas">MÚSICAS</a></li>
        </ul>
    </nav>
    <header>
      <img src="/img/background.png" alt="banner">
    </header>
    <main>
 
      <section id="cards">
        <h2>Lista de Pokemon</h2>
        <% pokedex.forEach((pokemon) =>{ %>
        <div class="card">
          <img src="<%= pokemon.imagem %>" alt="pokemon" />
          <h3><%= pokemon.nome %></h3>
          <div>
          <p class="descricao">DESCRIÇÃO: <%= pokemon.descricao %></p>
        </div>
        <div>
          <p>TIPO: <%= pokemon.tipo %></p>
        </div>
          <a id="editar" href="/detalhes/<%= pokemon.id %>">Editar</a>
          <a id="deletar" href="/deletar/<%= pokedex.indexOf(pokemon) %>">Deletar</a>
        </div>
        <% }) %>
      </section>

      
    </main>
    <footer id="rodape">
      <div id="linkB">
        <a class="linkedin" href="https://www.linkedin.com/in/kellbber-barcarolo-71a848230/ " target="_blank"> Kellbber Barcarolo </a>
      </div>
      <div id="p">
      <p>
        - Todos os direitos reservados &copy;
        </p>
      </div>
</footer>
  </body>
</html>
